<h1 class="mb-4 ml-10 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl">Players</h1>

<!-- Add a search form -->
<%= form_tag(players_path, method: :get, class: "search-form") do %>
  <div class="relative">
    <div class="field">
      <%= text_field_tag :search, params[:search], placeholder: "Search players...", class: "block w-11/12 p-4 pl-10 mx-auto mb-5 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    </div>
    <div class="actions">
      <%= submit_tag "Search", class: "text-white absolute right-20 bottom-2.5 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    </div>
  </div>
<% end %>

<table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <tr>
      <th scope="col" class="px-6 py-3">Username</th>
      <th scope="col" class="px-6 py-3">Email</th>
      <th scope="col" class="px-6 py-3">Bells</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white"><%= link_to player.username, player_path(player), class: "md:hover:text-blue-700" %></td>
        <td class="px-6 py-4"><%= player.email %></td>
        <td class="px-6 py-4"><%= player.bells %></td>
      </tr>
    <% end %>
  </tbody>
</table>
