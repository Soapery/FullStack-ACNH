<h1>Players</h1>

<!-- Add a search form -->
<%= form_tag(players_path, method: :get, class: "search-form") do %>
  <div class="field">
    <%= text_field_tag :search, params[:search], placeholder: "Search players..." %>
  </div>
  <div class="actions">
    <%= submit_tag "Search" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Bells</th>
    </tr>
  </thead>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.username, player_path(player) %></td>
        <td><%= player.email %></td>
        <td><%= player.bells %></td>
      </tr>
    <% end %>
  </tbody>
</table>
